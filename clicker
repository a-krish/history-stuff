<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Fancy Button</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(to right, #2c3e50, #3498db);
      color: white;
      text-align: center;
      padding-top: 50px;
    }

    .fancy-button {
      padding: 15px 30px;
      font-size: 20px;
      background: linear-gradient(45deg, #ff6ec4, #7873f5);
      border: none;
      border-radius: 12px;
      color: white;
      cursor: pointer;
      box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .fancy-button:hover {
      transform: scale(1.05);
      box-shadow: 0 12px 20px rgba(0, 0, 0, 0.3);
    }

    .info-box {
      margin-top: 20px;
    }

    .info-item {
      margin: 5px;
      background-color: rgba(255, 255, 255, 0.1);
      padding: 10px;
      border-radius: 8px;
    }

    .thank-you {
      display: none;
      font-size: 40px;
      font-weight: bold;
      background: linear-gradient(90deg, #ff6ec4, #7873f5);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      animation: popIn 1s ease forwards;
    }

    @keyframes popIn {
      0% { transform: scale(0); opacity: 0; }
      100% { transform: scale(1); opacity: 1; }
    }
  </style>
</head>
<body>

  <button class="fancy-button" onclick="revealInfo()">Click Me!</button>

  <div class="info-box" id="infoBox"></div>
  <div class="thank-you" id="thankYou">ðŸŽ‰ THANK YOU! ðŸŽ‰</div>

  <script>
    let clickCount = 0;

    function revealInfo() {
      clickCount++;

      if (clickCount <= 80) {
        const infoBox = document.getElementById("infoBox");
        const newInfo = document.createElement("div");
        newInfo.className = "info-item";
        newInfo.textContent = `You clicked ${clickCount} time${clickCount > 1 ? "s" : ""}!`;
        infoBox.appendChild(newInfo);
      }

      if (clickCount === 80) {
        document.querySelector(".fancy-button").style.display = "none";
        document.getElementById("thankYou").style.display = "block";
      }
    }
  </script>

</body>
</html>
